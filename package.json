{
  "name": "stockap",
  "version": "0.1.0",
  "icon": "assets/icon.ico",
  "private": true,
  "homepage": ".",
  "main": "./public/electron.js",
  "description": "Logiciel de gestion commercial",
  "author": "5sensprod",
  "copyright": "5sensprod Copyright 2023",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.18",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "i18next": "^23.7.6",
    "i18next-fs-backend": "^2.3.0",
    "i18next-http-backend": "^2.4.1",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "nedb": "^1.8.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "react-scripts": "^5.0.1",
    "react-table": "^7.8.0"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "react-scripts start",
    "build": "react-scripts build && copy public\\electron.js build\\electron.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server:start": "cross-env NODE_ENV=development node ./server/server.js",
    "electron:serve": "concurrently --kill-others-on-fail \"npm run server:start\" \"npm run start\" \"wait-on http://localhost:3000 && npm run electron:start\"",
    "electron:build": "cross-env NODE_ENV=production npm run build && electron-builder build",
    "electron:start": "electron .",
    "electron:trace": "node --trace-deprecation node_modules/.bin/electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.5sensprod.stockap",
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "./main.js",
        "to": "resources/main.js"
      },
      {
        "from": "./data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "package.json",
      "build/**/*",
      "main/**/*",
      "public/locales/**/*",
      "preload.js",
      {
        "from": "server/",
        "to": "server/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "StockAp"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/iconas.ico"
    }
  }
}
